{
  "name": "@foldkit/vite-plugin",
  "version": "0.2.0",
  "description": "Vite plugin for Foldkit hot module reloading with state preservation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist *.tsbuildinfo",
    "build": "pnpm run clean && tsc -b",
    "watch": "tsc -b --watch",
    "typecheck": "tsc -b --noEmit"
  },
  "peerDependencies": {
    "vite": "^7.0.0"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "foldkit",
    "hmr",
    "hot-reload"
  ],
  "author": "Devin Jameson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devinjameson/foldkit.git",
    "directory": "packages/vite-plugin-foldkit"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
